{
  "name": "@amsterdam/react-maps",
  "version": "1.0.1",
  "description": "ReactJS wrapped around Leaflet",
  "license": "MPL-2.0",
  "author": "Gemeente Amsterdam",
  "homepage": "https://github.com/Amsterdam/react-maps#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Amsterdam/react-maps.git"
  },
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "es",
    "lib"
  ],
  "jsnext:main": "./es/index.js",
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "scripts": {
    "clean": "rm -rf es lib",
    "build:ts": "tsc",
    "build:ts:es": "tsc --project tsconfig.es.json",
    "build": "npm run clean && npm run build:ts && npm run build:ts:es",
    "start": "webpack serve",
    "lint": "eslint ./ --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "publish": "lerna publish"
  },
  "peerDependencies": {
    "leaflet": ">=1.6",
    "react": ">=17",
    "react-dom": ">=17"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^8.0.0",
    "@types/geojson": "^7946.0.7",
    "@types/jest": "^27.0.0",
    "@types/leaflet": "^1.5.8",
    "@types/leaflet-draw": "^1.0.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "css-loader": "^6.2.0",
    "eslint": "8.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^27.0.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "file-loader": "^6.0.0",
    "geojson": "^0.5.0",
    "html-webpack-plugin": "^5.0.0",
    "husky": "^8.0.1",
    "jest": "^27.0.6",
    "jest-cli": "^29.1.1",
    "leaflet": "^1.6.0",
    "lerna": "^5.0.0",
    "lint-staged": "^13.0.1",
    "prettier": "^2.2.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "style-loader": "^3.2.1",
    "react-test-renderer": "^17.0.2",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.3.0",
    "typescript": "^4.7.3",
    "webpack": "^5.11.0",
    "webpack-cli": "^4.0.0",
    "webpack-dev-server": "^4.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    ".*.{ts,tsx}": [
      "eslint",
      "git add"
    ]
  }
}
